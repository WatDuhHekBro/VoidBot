{
	"name": "voidbot",
	"version": "1.0.0",
	"main": "out/index.js",
	"scripts": {
		"start": "npm run genversion && tsc-watch --onSuccess \"node .\"",
		"build": "npm run genversion && tsc",
		"pkg": "pkg --targets node18-linux-x64 --output voidbot out/index.js",
		"test": "jest",
		"fmt": "prettier --write .",
		"once": "npm run genversion && tsc && node .",
		"genversion": "genversion --es6 --double --semi src/version.ts"
	},
	"dependencies": {
		"@discordjs/opus": "^0.9.0",
		"@discordjs/voice": "^0.16.0",
		"chalk": "^4.1.2",
		"discord.js": "^14.11.0",
		"dotenv": "^16.1.4",
		"libsodium-wrappers": "^0.7.11",
		"re2": "^1.19.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.2",
		"@types/node": "^20.2.5",
		"genversion": "^3.1.1",
		"jest": "^29.5.0",
		"pkg": "^5.8.1",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.0",
		"tsc-watch": "^6.0.4",
		"typescript": "^5.1.3"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.+(ts|tsx)"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		}
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true
	}
}
